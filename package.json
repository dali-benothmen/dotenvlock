{
    "name": "dotenvlock",
    "version": "0.1.3",
    "description": "Type-safe environment variable validation for Node.js applications",
    "main": "dist/index.js",
    "type": "module",
    "bin": {
        "dotenvlock": "./bin/dotenvlock.js"
    },
    "scripts": {
        "clean": "rimraf dist/**",
        "compile:tsc": "tsc -p .",
        "compile:tsup": "tsup src/** --format cjs,esm --dts",
        "build": "pnpm run clean && pnpm run compile:tsup",
        "release": "pnpm run build && changeset publish",
        "ci": "pnpm run build"
    },
    "files": [
        "dist",
        "bin",
        "README.md",
        "LICENSE"
    ],
    "keywords": [
        "environment",
        "variables",
        "validation",
        "typescript",
        "dotenv",
        "config"
    ],
    "author": "Mohamed Ali Ben Othmen",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/dali-benothmen/dotenvlock"
    },
    "packageManager": "pnpm@10.6.1",
    "devDependencies": {
        "@changesets/cli": "^2.28.1",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.13.10",
        "@typescript-eslint/eslint-plugin": "^8.26.0",
        "@typescript-eslint/parser": "^8.26.0",
        "jest": "^29.7.0",
        "rimraf": "^6.0.1",
        "ts-jest": "^29.2.6",
        "tsup": "^8.4.0",
        "typescript": "^5.8.2"
    },
    "dependencies": {
        "chalk": "^5.4.1"
    }
}
